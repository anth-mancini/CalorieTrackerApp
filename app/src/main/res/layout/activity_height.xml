<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    tools:context=".HeightActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="18dp">



        <!-- Height headline -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewHeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textAppearance="?android:attr/textAppearanceMedium"
                 />
            <TextView
                android:id="@+id/textViewHeadlineB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textAppearance="?android:attr/textAppearanceMedium"
                 />
        </LinearLayout>
        <!-- // Height headline -->

        <!-- Height input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextHeightFeet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="numberDecimal"
                android:paddingTop="12dp" />

            <TextView
                android:id="@+id/textViewHeightFeet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="feet"
                />

            <EditText
                android:id="@+id/editTextHeightInches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="numberDecimal"
                android:paddingTop="12dp" />


            <TextView
                android:id="@+id/textViewHeightInches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="inches"
                />

            <EditText
                android:id="@+id/editTextHeightCm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="numberDecimal"
                android:paddingTop="12dp" />
            <TextView
                android:id="@+id/textViewHeightCm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="cm"
                />
        </LinearLayout>
        <!-- //Height input -->


        <!-- Next button and Switch measurement -->
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"

            android:text="Save"
            android:textAllCaps="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <Button
            android:id="@+id/buttonSwitchMeasurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"

            android:text="Switch to feet or inches"
            android:textAllCaps="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <!-- //Next button and Switch measurement -->

    </LinearLayout>
</ScrollView>