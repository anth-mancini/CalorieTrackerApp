<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/go_to_diagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diagram for Macronutrients"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/go_to_daily_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Daily Calorie Goal"
        android:layout_marginTop="25dp"
        android:layout_below="@id/go_to_diagram"/>

    <Button
        android:id="@+id/addfoodbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Food"
        android:layout_marginTop="25dp"
        android:layout_below="@id/go_to_daily_goal"/>

    <Button
        android:id="@+id/btn_displayFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food List"
        android:layout_marginTop="25dp"
        android:layout_below="@id/addfoodbtn"/>

    <Button
        android:id="@+id/foodDBbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick food to add!"
        android:layout_marginTop="25dp"
        android:layout_below="@id/btn_displayFood"/>

    <Button
        android:id="@+id/viewHistoryBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Meal History"
        android:layout_marginTop="25dp"
        android:layout_below="@id/foodDBbtn"/>


</RelativeLayout>